<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title><%= blog.title %></title>
    <style>
        .blog-container {
            max-width: 90%;
            margin: 2rem auto;
            padding: 0 20px;
        }

        .blog-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .blog-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 1.5rem;
            line-height: 1.2;
        }

        .cover-image {
            width: 50%;
            max-height: 600px;
            object-fit: contain;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
            transition: transform 0.3s ease;
        }

        .cover-image:hover {
            transform: scale(1.01);
        }

        .blog-content {
            max-width: 1200px;
            margin: 2rem auto;
            font-size: 1.1rem;
            line-height: 1.8;
            color: #4a5568;
            white-space: pre-wrap;
            margin-bottom: 2rem;
        }

        .author-section {
            display: flex;
            align-items: center;
            padding: 1rem;
            background-color: #f7fafc;
            border-radius: 8px;
            margin: 2rem 0;
        }

        .author-image {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 1rem;
            border: 2px solid #4299e1;
        }

        .author-name {
            font-weight: 600;
            color: #2d3748;
            font-size: 1.1rem;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            margin: 2rem 0;
        }

        .comments-section {
            max-width: 1200px;
            margin: 3rem auto;
            background-color: #f7fafc;
            padding: 2rem;
            border-radius: 12px;
        }

        .comments-header {
            font-size: 1.5rem;
            color: #2d3748;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .comment-count {
            background-color: #4299e1;
            color: white;
            padding: 0.2rem 0.8rem;
            border-radius: 999px;
            font-size: 0.9rem;
        }

        .comment-form {
            margin-bottom: 2rem;
        }

        .comment-input {
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            padding: 1rem;
            font-size: 1rem;
            width: 100%;
            margin-bottom: 1rem;
            transition: border-color 0.3s ease;
        }

        .comment-input:focus {
            border-color: #4299e1;
            outline: none;
        }

        .comment-item {
            display: flex;
            gap: 1rem;
            padding: 1rem;
            border-bottom: 1px solid #e2e8f0;
            transition: background-color 0.3s ease;
        }

        .comment-item:hover {
            background-color: #edf2f7;
        }

        .comment-user-image {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .comment-content {
            flex: 1;
        }

        .comment-user-name {
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 0.5rem;
        }

        .comment-text {
            color: #4a5568;
            white-space: pre-wrap;
            line-height: 1.5;
        }

        .btn-custom {
            padding: 0.5rem 1.5rem;
            border-radius: 6px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .btn-edit {
            background-color: #f6e05e;
            color: #744210;
            border: none;
        }

        .btn-delete {
            background-color: #fc8181;
            color: #742a2a;
            border: none;
        }

        .btn-comment {
            background-color: #4299e1;
            color: white;
            border: none;
        }

        @media (max-width: 768px) {
            .blog-title {
                font-size: 2rem;
            }


            .blog-content {
                font-size: 1rem;
            }
        }

        @media (min-width: 1440px) {
            .blog-container {
                max-width: 95%;
            }
            
            .blog-title {
                font-size: 3rem;
            }
            
            .cover-image {
                max-height: 700px;
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>
    
    <div class="blog-container">
        <article class="blog-header">
            <h1 class="blog-title"><%= blog.title %></h1>
            <img src="<%= blog.coverImageURL %>" class="cover-image" alt="Blog cover">
        </article>

        <div class="blog-content">
            <%= blog.body %>
        </div>

        <div class="author-section">
            <img src="<%= blog.createdBy.profileImageURL %>" class="author-image" alt="Author">
            <div>
                <div class="author-name"><%= blog.createdBy.fullName %></div>
                <small class="text-muted">Published on <%= new Date(blog.createdAt).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                }) %></small>
            </div>
        </div>

        <% if (locals.user && locals.user._id.toString() === blog.createdBy._id.toString()) { %>
            <div class="action-buttons">
                <a href="/blog/edit/<%= blog._id %>" class="btn btn-custom btn-edit">
                    <i class="fas fa-edit"></i> Edit Blog
                </a>
                <form action="/blog/delete/<%= blog._id %>" method="POST" style="display:inline;" 
                      onsubmit="return confirm('Are you sure you want to delete this blog?');">
                    <button type="submit" class="btn btn-custom btn-delete">
                        <i class="fas fa-trash"></i> Delete Blog
                    </button>
                </form>
            </div>
        <% } %>

        <section class="comments-section">
            <h2 class="comments-header">
                Comments <span class="comment-count"><%= comments.length %></span>
            </h2>

            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post" class="comment-form">
                    <input type="text" 
                           placeholder="Write your thoughts..." 
                           class="comment-input"
                           name="content"
                           required>
                    <button type="submit" class="btn btn-custom btn-comment">
                        <i class="fas fa-paper-plane"></i> Post Comment
                    </button>
                </form>
            <% } else { %>
                <div class="alert alert-info">
                    Please <a href="/user/signin">sign in</a> to leave a comment.
                </div>
            <% } %>

            <div class="comments-list">
                <% comments.forEach(comment => { %>
                    <div class="comment-item">
                        <img src="<%= comment.createdBy.profileImageURL %>" 
                             class="comment-user-image" 
                             alt="<%= comment.createdBy.fullName %>">
                        <div class="comment-content">
                            <div class="comment-user-name"><%= comment.createdBy.fullName %></div>
                            <div class="comment-text"><%= comment.content %></div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </div>

    <%- include('./partials/scripts') %>
    <!-- Add Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</body>
</html>
